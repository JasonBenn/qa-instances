{
  "name": "Minerva QA Instances",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Spin up/down QA instances for Minerva Project pull requests",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/socket.io.js", "js/jquery/jquery.min.js", "js/underscore/underscore-min.js", "src/utils.js", "src/bg/background.js"],
    "persistent": true
  },
  "permissions": [
    "contentSettings",
    "notifications",
    "webNavigation",
    "https://github.com/minervaproject/*/pull*",
    "http://qa-instance-coordinator.minervaproject.com/*"
  ],
  "content_security_policy": "script-src 'self' https://qa-instance-coordinator.minervaproject.com; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["https://github.com/minervaproject/*/pulls"],
      "js": ["js/jquery/jquery.min.js", "js/underscore/underscore-min.js", "src/utils.js", "src/inject/pulls.js"],
      "css": ["src/inject/pulls.css"]
    },
    {
      "matches": ["https://github.com/minervaproject/*/pull/*"],
      "js": ["js/jquery/jquery.min.js", "js/underscore/underscore-min.js", "src/utils.js", "src/inject/pull.js"],
      "css": ["src/inject/pull.css"]
    }
  ],
  "web_accessible_resources": ["src/templates/*"]
}