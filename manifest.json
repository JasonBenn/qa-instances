{
  "name": "Minerva QA Instances",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Spin up/down QA instances for Minerva Project pull requests",
  "homepage_url": "http://extensionizr.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/underscore/underscore-min.js", "src/bg/background.js"],
    "persistent": true
  },
  "permissions": [
    "contentSettings",
    "notifications",
    "webNavigation",
    "https://github.com/minervaproject/*/pull*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/minervaproject/*/pulls"],
      "js": ["js/jquery/jquery.min.js", "src/inject/pulls.js"],
      "css": ["src/inject/pulls.css"]
    },
    {
      "matches": ["https://github.com/minervaproject/*/pull/*"],
      "js": ["js/jquery/jquery.min.js", "src/inject/pull.js"],
      "css": ["src/inject/pull.css"]
    }
  ]
}